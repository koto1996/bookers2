<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%=render'userinfo',user: @user%>
        <%=render'books/newbook',book: @book%>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table-hover table-inverse">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>


       <%@books.each do |book|%>
        <tr>
        <td><%=link_to user_path(book.user.id) do %>
        <%= image_tag book.user.get_profile_image(100,100)%>
        <% end %></td>
          <td>
            <%=link_to book.title,book_path(book.id) %></td>
          <td><%=book.body%></td>
        </tr>
       <% end %>
      </table>
      </div>
    </div>
  </div>

</main>