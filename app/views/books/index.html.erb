

<div class="col-md-8 offset-md-1">
 <h2>Books</h2>
  <table class="table-hover table-inverse">
   <thead>
     <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
    <%@books.each do |book|%>
     <tr>
       <tb>image_tag</tb>
       <%=link_to book_path(book.id) do %>
       <tb><%=book.title%></tb>
       <% end %>
       <tb><%=book.body%></tb>
     </tr>
    <% end %>
   </tbody>
  </table>
</div>