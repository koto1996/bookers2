<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%=render'users/userinfo',user: @user%>
        <%=render'newbook',book: @newbook%>
      </div>
      <div class="col-md-8 offser-md-1">
        <h2>Book detail</h2>
        <tbody>
        <tr>
          <td><%=image_tag @book.user.get_profile_image(100,100)%></td>
          <td>
          <%=link_to user_path(@user.id) do %>
          <%=@user.name%>
          <% end %>
          </td>
          <td>
          <%=link_to book_path(@book.id) do %>
          <%=@book.title%>
          <% end %>
          </td>
          <td><%=@book.body%></td>
          <% if @book.user == current_user%>
          <td><%=link_to 'Edit',edit_book_path(@book),class: "btn btn-secondary"%></td>
          <td><%=link_to 'Destroy',book_path(@book),method: :delete,class: "btn btn-secondary"%></td>
          <% end %>
        </tr>
        </tbody>
      </div>
    </div>
  </div>
</main>